<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="16dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="16dp"
              android:background="#c3c3c3"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <EditText
            android:id="@+id/eteRegUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingreso usuario"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="20"/>
        <EditText
            android:id="@+id/eteRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eteRegUsuario"
            android:hint="Ingrese password"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="20"
            />
        <EditText
            android:id="@+id/eteRegPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eteRegPassword"
            android:hint="Reingrese password"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="20"/>
        <Button
            android:id="@+id/butGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eteRegPassword2"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:text="Guardar"
            android:background="@color/cardview_dark_background"
            android:textColor="#ffff"/>
    </RelativeLayout>

</LinearLayout>